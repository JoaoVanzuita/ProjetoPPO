        <Label fx:id="labelQuantidadeProdutoSelecionado" layoutX="89.0" layoutY="188.0" />
        <Label fx:id="labelPrecoDeVendaProdutoSelecionado" layoutX="109.0" layoutY="118.0" />
        <Label fx:id="labelPrecoDeCustoProdutoSelecionado" layoutX="105.0" layoutY="152.0" />

        <Label layoutX="14.0" layoutY="29.0" text="Nome: " />
        <Label layoutX="14.0" layoutY="75.0" text="Categoria: " />
        <Label layoutX="14.0" layoutY="117.0" text="Preço de venda: " />
        <Label layoutX="14.0" layoutY="187.0" text="Quantidade: " />
        <Label layoutX="14.0" layoutY="152.0" text="Preço de custo:" />

    </Pane>

</AnchorPane>
